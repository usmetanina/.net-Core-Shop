@model IEnumerable<Shops.Models.Boot>
@{
    ViewData["Title"] = "Каталог кроссовок";
}

<h3>Каиалог кроссовок</h3>
<table class="table-condensed">
    <tr>
        <td>Модель</td>
        <td>Цена</td>
        <td>Подробнее</td>
        <td></td>
    </tr>
    @foreach (var boot in Model)
    {
    <tr>
        <td>@boot.Name</td>
        <td>@boot.Price</td>
        <td><a href="~/Boot/Index/@boot.Id">Описание</a></td>
    </tr>
    }
</table>